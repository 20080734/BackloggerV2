<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:elevation="24dp"
    android:orientation="vertical"
    tools:context="org.wit.backloggerv2.activities.BackloggerActivity">
>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/cardview_dark_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="710dp"
            android:orientation="vertical"
            android:padding="16dp">


            <ImageView
                android:id="@+id/gameCoverArtView"
                android:layout_width="246dp"
                android:layout_height="381dp"
                android:layout_marginRight="16dp"
                android:padding="20dp"
                android:translationX="40dp" />

            <LinearLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="163dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-Title-"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/gameTitleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[title]"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-Description-"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/gameDescriptionView"
                        android:layout_width="match_parent"
                        android:layout_height="173dp"
                        android:text="[description]"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-Developer-"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/gameDeveloperView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[Developer]"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-Publisher-"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/gamePublisherView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[Publisher]"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-Release Year-"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/gameReleaseDateView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[year]"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-Platform-"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/gamePlatformView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[platform]"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-Genre-"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/gameGenreView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[genre]"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/gamePlatform4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-Metacritic Score-"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/gameMetacriticView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[score]"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>